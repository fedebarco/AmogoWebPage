---
import pdfLogo from '../assets/logo.svg';
import { getTranslation, getTranslationList } from '../i18n/translations';
import { getCurrentLanguage } from '../utils/i18n';

const lang = getCurrentLanguage(Astro.url.pathname);
---
<div id="container">
    <nav>
        <div class="logo">
            <img src={pdfLogo.src} alt={getTranslation(lang, 'logoAlt')} class="nav-logo">
            <span>{getTranslation(lang, 'appName')}</span>
        </div>
    </nav>

    <main class="privacy-content">
        <h1>{getTranslation(lang, 'privacyTitle')}</h1>
        
        <section>
            <h2>{getTranslation(lang, 'noDataCollectionTitle')}</h2>
            <p>{getTranslation(lang, 'noDataCollectionText')}</p>
        </section>

        <section>
            <h2>{getTranslation(lang, 'howItWorksTitle')}</h2>
            <p>{getTranslation(lang, 'howItWorksIntro')}</p>
            <ul>
                {getTranslationList(lang, 'howItWorksList').map(item => (
                    <li>{item}</li>
                ))}
            </ul>
        </section>

        <section>
            <h2>{getTranslation(lang, 'fileAccessTitle')}</h2>
            <p>{getTranslation(lang, 'fileAccessText')}</p>
        </section>

        <section>
            <h2>{getTranslation(lang, 'contactTitle')}</h2>
            <p>
                {getTranslation(lang, 'contactText')} 
                <a href="mailto:fbarcoo@unal.edu.co" class="inline-link">fbarcoo@unal.edu.co</a>.
            </p>
        </section>
    </main>

    <footer>
        <a href="https://github.com/fedebarco/PDFtoText/blob/main/LICENSE">{getTranslation(lang, 'license')}</a>
        <a href="https://github.com/fedebarco/PDFtoText/tree/main">{getTranslation(lang, 'sourceCode')}</a>
        <a href={`${lang === 'en' ? '/en' : ''}/`}>{getTranslation(lang, 'home')}</a>
    </footer>
</div>

<style>
:root {
    --init-background-color: rgb(28, 28, 30);
    --init-label-color: rgba(255, 255, 255, 0.98);
    --secondary-color: rgba(255, 255, 255, 0.6);
}

body {
    background-color: var(--init-background-color);
    color: var(--init-label-color);
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    letter-spacing: -0.022em;
}

nav {
    background-color: rgba(28, 28, 30, 0.8);
    padding: 16px 40px;
    width: 100%;
    text-align: left;
    box-sizing: border-box;
    backdrop-filter: blur(20px);
    position: fixed;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.logo {
    font-size: 1.2em;
    font-weight: 600;
    color: var(--init-label-color);
    display: flex;
    align-items: center;
    gap: 12px;
}

.logo span {
    color: white;
}

.nav-logo {
    width: 28px;
    height: 28px;
    object-fit: contain;
    filter: brightness(0) invert(1);
}

main {
    text-align: center;
    padding: 120px 20px 40px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    max-width: 800px;
    margin: 0 auto;
}

.privacy-content {
    text-align: left;
}

.privacy-content h1 {
    font-size: 48px;
    margin: 0 0 40px;
    font-weight: 500;
    letter-spacing: -0.05em;
    text-align: center;
}

.privacy-content section {
    margin-bottom: 40px;
}

.privacy-content h2 {
    font-size: 24px;
    margin: 0 0 16px;
    font-weight: 500;
    color: var(--init-label-color);
}

.privacy-content p {
    font-size: 17px;
    line-height: 1.5;
    color: var(--secondary-color);
    margin: 0 0 16px;
}

.privacy-content ul {
    list-style-type: none;
    padding: 0;
    margin: 16px 0;
}

.privacy-content li {
    font-size: 17px;
    line-height: 1.5;
    color: var(--secondary-color);
    margin: 8px 0;
    padding-left: 24px;
    position: relative;
}

.privacy-content li:before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--init-label-color);
}

.inline-link {
    color: var(--init-label-color);
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    transition: border-color 0.2s ease;
}

.inline-link:hover {
    border-color: var(--init-label-color);
}

footer {
    width: 100%;
    text-align: center;
    padding: 20px;
    box-sizing: border-box;
}

footer a {
    color: var(--secondary-color);
    text-decoration: none;
    margin: 0 10px;
    font-size: 12px;
    transition: color 0.2s ease;
}

footer a:hover {
    color: var(--init-label-color);
}
</style> 